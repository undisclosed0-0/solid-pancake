    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="script.js"></script>
<script>
 // !!! IMPORTANT: Paste your DEPLOYED WEB APP URL here
const API_URL = "https://script.google.com/macros/s/AKfycbyyIBp_A4nezssn33cm2oNHNaGftrvv5F5QvSjslZSTkL9u1BpfIVmdkQxhoRqYg6HFkg/exec";
const GSI_CLIENT_ID = "290258312369-dvtidrarb7kosrqipq45t1ueqrf23hsm.apps.googleusercontent.com";

// --- GLOBAL ELEMENTS & VARIABLES ---
const loadingSpinner = document.getElementById('loading-overlay');
const loginStatus = document.getElementById('login-status');
let googleUserId = null; 

// --- CORE AUTH LOGIC (BUTTON SWAP) ---

/**
 * Toggles the visibility of the Google Sign-In button and the custom Logout button.
 */
function updatePortalView() {
    const userRole = localStorage.getItem("userRole");
    const userEmail = localStorage.getItem("userEmail");
    const gsiContainer = document.getElementById("gsi-button-container");
    const logoutContainer = document.getElementById("logout-button-container");
    const isGsiReady = window.google && window.google.accounts;

    if (userRole) {
        // LOGGED IN: Hide Google, Show Logout
        if (gsiContainer) gsiContainer.style.display = 'none';
        if (logoutContainer) logoutContainer.style.display = 'block';
        loginStatus.innerHTML = `Signed in as: <strong>${userEmail}</strong>`;
    } else {
        // LOGGED OUT: Show Google, Hide Logout
        if (gsiContainer) {
            gsiContainer.style.display = 'block';
            
            if (isGsiReady) {
                gsiContainer.innerHTML = ''; 
                google.accounts.id.renderButton(
                    gsiContainer,
                    { theme: "outline", size: "large" } 
                );
            }
        }
        if (logoutContainer) logoutContainer.style.display = 'none';
        loginStatus.innerHTML = "Please sign in to access the portal.";
    }
}

/**
 * Handles the Google Sign-Out process.
 */
function logout() {
    loginStatus.innerHTML = "Logging out...";
    
    // Clear local storage and global ID
    localStorage.removeItem("userEmail");
    localStorage.removeItem("userRole");
    const currentGoogleUserId = googleUserId;
    googleUserId = null; 
    
    // Revoke Google access if possible
    if (window.google && window.google.accounts && currentGoogleUserId) {
        google.accounts.id.revoke(currentGoogleUserId, (response) => {
            if (response.error) console.error("Logout Revocation Error:", response.error);
        });
        google.accounts.id.disableAutoSelect();
    }
    
    // Cleanup UI and redirect to the portal view
    const gsiContainer = document.getElementById("gsi-button-container");
    if (gsiContainer) gsiContainer.innerHTML = ''; 
    loginStatus.innerHTML = "Logged out successfully.";
    window.location.hash = "#portal-view"; 
    setTimeout(handleHashChange, 50); 
}

/**
 * Handles the response from Google after successful sign-in.
 */
async function handleCredentialResponse(response) {
    const user = parseJwt(response.credential);
    const userEmail = user.email;
    googleUserId = user.sub; 

    localStorage.setItem("userEmail", userEmail);
    loginStatus.innerHTML = "Authenticating...";

    // Check role with backend API
    loadingSpinner.style.display = 'block';
    const checkAuthUrl = `${API_URL}?action=checkAuth&email=${userEmail}`;
    
    try {
        const res = await fetch(checkAuthUrl);
        const authData = await res.json();
        loadingSpinner.style.display = 'none';

        if (authData.status === "success" && authData.role) {
            localStorage.setItem("userRole", authData.role);
            const targetHash = authData.role === "admin" ? "#admin-panel-view" : "#driver-panel-view";
            window.location.hash = targetHash;
            setTimeout(handleHashChange, 50);
        } else {
            // User unauthorized
            localStorage.removeItem("userEmail");
            loginStatus.innerHTML = "<strong>Access Denied.</strong> Not registered as driver/admin.";
            updatePortalView();
        }
    } catch (error) {
        loadingSpinner.style.display = 'none';
        loginStatus.innerHTML = "Error connecting to backend service.";
    }
}

/**
 * Handles view switching based on the URL hash.
 */
function handleHashChange() {
    let hash = window.location.hash || "#landing-view"; 
    const userRole = localStorage.getItem("userRole");

    // Security check: Redirect unauthorized attempts
    if ((hash === "#admin-panel-view" && userRole !== "admin") || 
        (hash === "#driver-panel-view" && userRole !== "driver")) {
        hash = "#portal-view"; 
    }

    // Hide and show the active view
    document.querySelectorAll('.view').forEach(view => view.classList.remove('active'));
    const activeView = document.querySelector(hash); 
    if (activeView) activeView.classList.add('active');
    
    // CRITICAL: Update the button display if we are on the portal page
    if (hash === "#portal-view") {
        updatePortalView();
    }
    // (Dashboard loading logic omitted for brevity here)
}

/**
 * Helper to parse the JWT credential token.
 */
function parseJwt(token) {
    // ... JWT parsing logic ...
    const base64Url = token.split('.')[1];
    const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
    const jsonPayload = decodeURIComponent(atob(base64).split('').map(c => '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2)).join(''));
    return JSON.parse(jsonPayload);
}


window.onload = function() {
    // 1. Initialize Google Sign-In Client
    if (window.google && window.google.accounts) {
        google.accounts.id.initialize({
            client_id: GSI_CLIENT_ID, 
            callback: handleCredentialResponse
        });
    }

    // 2. Set up routing and initial view
    handleHashChange(); 
    window.addEventListener('hashchange', handleHashChange);
};
  
  </script>
  </body>
</html>
