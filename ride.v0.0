    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

/* Style form inputs */
input[type="text"],
input[type="tel"] {
    width: 100%;
    padding: 15px;
    background: #333;
    border: 1px solid #555;
    border-radius: 5px;
    color: #fff;
