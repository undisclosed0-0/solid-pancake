// --- NEW: Smart Login Callback ---
async function handleCredentialResponse(response) {
    const user = parseJwt(response.credential);
    const userEmail = user.email;

    localStorage.setItem("userEmail", userEmail);
    loginStatus.innerHTML = "Authenticating...";

    // Check with our API what role this user has
    loadingSpinner.style.display = 'block';
    const checkAuthUrl = `${API_URL}?action=checkAuth&email=${userEmail}`;
    const res = await fetch(checkAuthUrl);
    const authData = await res.json();
    loadingSpinner.style.display = 'none';

    if (authData.status === "success") {
        localStorage.setItem("userRole", authData.role);

        // --- REDIRECTION FIX: Use setTimeout and explicit call for reliable routing ---
        if (authData.role === "admin") {
            loginStatus.innerHTML = "Admin login successful. Redirecting...";
            window.location.hash = "#admin-panel-view";
            setTimeout(handleHashChange, 50); // Small delay for reliable routing

        } else if (authData.role === "driver") {
            loginStatus.innerHTML = "Driver login successful. Redirecting...";
            window.location.hash = "#driver-panel-view";
            setTimeout(handleHashChange, 50); // Small delay for reliable routing

        } else {
            localStorage.removeItem("userEmail");
            localStorage.removeItem("userRole");
            loginStatus.innerHTML = "<strong>Access Denied.</strong> This email is not registered as a driver or admin.";
        }
    } else {
        loginStatus.innerHTML = "Error during authentication.";
    }
}

// --- NEW: Driver Panel Logic ---
async function loadDriverDashboard() {
    const userEmail = localStorage.getItem("userEmail");
    if (!userEmail) return;

    loadingSpinner.style.display = 'block';
    const dataUrl = `${API_URL}?action=getDriverData&email=${userEmail}`;
    const res = await fetch(dataUrl);
    const data = await res.json();
    loadingSpinner.style.display = 'none';

    if (data.status === "success") {
        // 1. Welcome message and status
        document.getElementById('driver-welcome').textContent = `Welcome, ${data.info.name}!`;
        updateDriverStatusUI(data.info.isAvailable);

        // 2. Populate rides table
        const tableBody = document.getElementById('driver-rides-table').querySelector('tbody');
        const tableHead = document.getElementById('driver-rides-table').querySelector('thead');
        populateTable(tableHead, tableBody, data.rides);
    }

    // Add event listener for the toggle button
    document.getElementById('toggle-availability-btn').onclick = handleToggleAvailability;
}

// NEW: Toggle Availability
async function handleToggleAvailability() {
    const userEmail = localStorage.getItem("userEmail");
    loadingSpinner.style.display = 'block';

    const toggleUrl = `${API_URL}?action=toggleAvailability&email=${userEmail}`;
    const res = await fetch(toggleUrl);
    const data = await res.json();

    loadingSpinner.style.display = 'none';
    if (data.status === "success") {
        updateDriverStatusUI(data.isAvailable);
    } else {
        alert("Error updating status.");
    }
}

// NEW: Helper to update driver status UI
function updateDriverStatusUI(isAvailable) {
    const btn = document.getElementById('toggle-availability-btn');
    const statusText = document.getElementById('driver-status-text');
    if (isAvailable) {
        btn.textContent = "Go Off Duty";
        btn.style.backgroundColor = "#888"; // Grey out
        statusText.innerHTML = "Your status is: <strong>Online & Available</strong>";
    } else {
        btn.textContent = "Go On Duty";
        btn.style.backgroundColor = "var(--primary-color)"; // Back to red
        statusText.innerHTML = "Your status is: <strong>Offline</strong>";
    }
}

// --- Admin Panel Logic ---
