// This function attempts to revoke the token, forcing the user to re-select 
// their account from the Google Account Chooser next time.
function aggressiveGoogleSignOut(callback) {
    if (!googleUserId) {
        console.log("No Google user ID found to revoke.");
        return;
    }
    
    // This calls the Google API to explicitly revoke access for this user/client ID
    google.accounts.id.revoke(googleUserId, (response) => {
        // This is a powerful command and should clear the cookie for your app.
        if (response.error) {
            console.error("Logout Revocation Error:", response.error);
        } else {
            console.log("Google user access successfully revoked.");
        }
        
        // Always run the callback to finish the app-side logout process
        if (callback) callback();
    });
    
    // Also run the standard function for good measure
    google.accounts.id.disableAutoSelect();
}

function logout() {
    loginStatus.innerHTML = "Logging out...";
    
    // Clear the tokens and roles we stored locally
    localStorage.removeItem("userEmail");
    localStorage.removeItem("userRole");
    googleUserId = null; // Clear the global variable
    
    // Tell Google to forget the user, and then redirect
    aggressiveGoogleSignOut(() => {
        // 1. Clear the button container's content (the visual email persistence)
        const gsiContainer = document.getElementById("gsi-button-container");
        if (gsiContainer) {
            gsiContainer.innerHTML = ''; 
        }
        
        // 2. Redirect to the portal view
        loginStatus.innerHTML = "Logged out successfully.";
        window.location.hash = "#portal-view"; 
        
        // 3. Force the router to run and re-render the clean button
        setTimeout(handleHashChange, 50); 
    });
}</script>
