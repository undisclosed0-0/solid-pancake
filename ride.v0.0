    try {
        const response = await fetch(url);
        const result = await response.json();
        loadingSpinner.style.display = 'none';

        if (result.status === "success") {
            bookingStatus.innerHTML = `<strong>Success!</strong> Your ride (${result.rideId}) is booked with ${result.driver}.`;
            bookForm.reset();
        } else {
            bookingStatus.innerHTML = `<strong>Error:</strong> ${result.message}`;
        }
    } catch (error) {
        loadingSpinner.style.display = 'none';
        bookingStatus.innerHTML = `<strong>Network Error:</strong> ${error.message}`;
    }
});

