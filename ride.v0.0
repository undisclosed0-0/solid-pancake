<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CityWide Logistics Dispatch (Apps Script)</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        :root {
            --primary-color: #ef4444; /* Red 500 */
            --secondary-color: #10b981; /* Emerald 500 */
        }
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }
        .container {
            max-width: 1000px;
        }
        .icon-lg { width: 24px; height: 24px; }
        .dashboard-card {
            min-height: 120px;
        }
        /* Style the required scrollbar for the table container */
        .table-container {
            overflow-x: auto;
            max-height: 60vh;
            overflow-y: auto;
        }
        /* Custom scrollbar for aesthetics */
        .table-container::-webkit-scrollbar {
            width: 8px;
        }
        .table-container::-webkit-scrollbar-thumb {
            background-color: var(--primary-color);
            border-radius: 10px;
        }
    </style>
</head>
<body>

<div id="app" class="min-h-screen bg-gray-50 flex flex-col items-center p-4 sm:p-8">
    <!-- Header -->
    <header class="w-full container bg-white shadow-xl rounded-xl p-4 mb-6 sticky top-0 z-10">
        <div class="flex flex-col sm:flex-row justify-between items-center">
            <h1 class="text-3xl font-extrabold text-gray-800 flex items-center mb-3 sm:mb-0">
                <i data-lucide="truck" class="text-red-500 mr-3"></i> CityWide Dispatch
            </h1>
            <div id="authStatus" class="text-sm font-medium text-gray-600 flex items-center">
                <!-- Status will be updated by JS -->
            </div>
        </div>
        <div id="nav" class="mt-4 flex space-x-2 sm:space-x-4 overflow-x-auto pb-2">
            <!-- Navigation buttons will be injected here -->
        </div>
    </header>

    <!-- Main Content Area -->
    <main id="content" class="w-full container flex-grow">
        <!-- Views will be dynamically injected here -->
        <div id="loadingIndicator" class="text-center p-12 text-gray-500 text-lg">
            <div class="animate-spin inline-block w-8 h-8 border-4 border-red-500 border-t-transparent rounded-full"></div>
            <p class="mt-4">Checking user role and fetching data...</p>
        </div>
        <div id="errorDisplay" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-4" role="alert">
            <strong class="font-bold">Error:</strong>
            <span id="errorMessage" class="block sm:inline"></span>
        </div>
    </main>

    <!-- Modal Placeholder (for alerts/confirmation) -->
    <div id="modalContainer" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-xl shadow-2xl p-6 w-11/12 max-w-md transform transition-all duration-300">
            <h3 id="modalTitle" class="text-xl font-bold mb-3 text-red-500"></h3>
            <p id="modalMessage" class="text-gray-700 mb-6"></p>
            <div id="modalButtons" class="flex justify-end space-x-3">
                <!-- Buttons will be injected -->
            </div>
        </div>
    </div>
</div>

<script>
    // ⚠️ IMPORTANT: PASTE YOUR GOOGLE APPS SCRIPT WEB APP URL HERE ⚠️
    const SCRIPT_URL = "YOUR_DEPLOYED_APPS_SCRIPT_URL_HERE"; 
    // Example: "https://script.google.com/macros/s/AKfycbu..." 

    // --- STATE MANAGEMENT ---
    let userRole = 'none'; // 'none', 'driver', 'admin', 'master_admin'
    let userEmail = 'N/A';
    let currentView = 'Public'; 
    let rides = []; // Stores all rides (for admin) or assigned rides (for driver)
    let availableDrivers = []; // Stores driver data (for admin)

    // --- UTILITIES ---

    function showModal(title, message, buttons) {
        const modalContainer = document.getElementById('modalContainer');
        const modalTitle = document.getElementById('modalTitle');
        const modalMessage = document.getElementById('modalMessage');
        const modalButtons = document.getElementById('modalButtons');

        if (!modalContainer || !modalTitle || !modalMessage || !modalButtons) {
            console.error("Modal elements not found. Cannot show modal.");
            return;
        }

        modalTitle.textContent = title;
        modalMessage.textContent = message;
        modalButtons.innerHTML = '';

        buttons.forEach(btn => {
            const button = document.createElement('button');
            button.className = `px-4 py-2 rounded-lg font-bold transition-colors ${btn.className || 'bg-red-500 text-white hover:bg-red-600'}`;
            button.textContent = btn.text;
            button.onclick = () => {
                btn.handler();
                hideModal();
            };
            modalButtons.appendChild(button);
        });

        modalContainer.classList.remove('hidden');
        modalContainer.classList.add('flex');
    }

    function hideModal() {
        const modalContainer = document.getElementById('modalContainer');
        if (modalContainer) {
            modalContainer.classList.remove('flex');
            modalContainer.classList.add('hidden');
        }
    }

    function displayError(message) {
        const errorMessageEl = document.getElementById('errorMessage');
        const errorDisplayEl = document.getElementById('errorDisplay');
        if (errorMessageEl && errorDisplayEl) {
            errorMessageEl.textContent = message;
            errorDisplayEl.classList.remove('hidden');
        }
    }

    function clearError() {
        const errorDisplayEl = document.getElementById('errorDisplay');
        if (errorDisplayEl) {
            errorDisplayEl.classList.add('hidden');
        }
    }

    /**
     * Generic fetch wrapper for Apps Script GET requests.
     */
    async function fetchScriptData(action, params = {}) {
        if (SCRIPT_URL === "YOUR_DEPLOYED_APPS_SCRIPT_URL_HERE") {
             displayError("Please update the SCRIPT_URL variable in the code with your deployed Apps Script URL.");
             return null;
        }

        const url = new URL(SCRIPT_URL);
        url.searchParams.append('action', action);
        
        // Append extra parameters for GET requests
        Object.keys(params).forEach(key => url.searchParams.append(key, params[key]));

        try {
            const response = await fetch(url.toString());
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            const data = await response.json();
            if (data.status === 'error') {
                throw new Error(data.message);
            }
            clearError();
            return data;
        } catch (error) {
            console.error(`Fetch error for action ${action}:`, error);
            displayError(`Data retrieval failed (${action}): ${error.message}`);
            return null;
        }
    }

    /**
     * Generic fetch wrapper for Apps Script POST requests.
     */
    async function postScriptData(payload) {
        if (SCRIPT_URL === "YOUR_DEPLOYED_APPS_SCRIPT_URL_HERE") {
             displayError("Please update the SCRIPT_URL variable in the code with your deployed Apps Script URL.");
             return null;
        }
        
        try {
            const response = await fetch(SCRIPT_URL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(payload)
            });

            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            
            const data = await response.json();
            if (data.status === 'error') {
                throw new Error(data.message);
            }
            clearError();
            return data;
        } catch (error) {
            console.error(`Post error for action ${payload.action}:`, error);
            displayError(`Data submission failed (${payload.action}): ${error.message}`);
            return null;
        }
    }

    // --- INITIALIZATION & AUTHENTICATION ---

    async function initApp() {
        const loadingIndicator = document.getElementById('loadingIndicator');
        if (loadingIndicator) {
            loadingIndicator.classList.remove('hidden');
        }
        
        const authData = await fetchScriptData('checkAuth');
        
        if (authData) {
            userRole = authData.role;
            userEmail = authData.userEmail;
            
            // Set initial view based on role
            if (userRole === 'admin' || userRole === 'master_admin') {
                currentView = 'Admin';
            } else if (userRole === 'driver') {
                currentView = 'Driver';
            } else {
                currentView = 'Public';
            }
        } else {
            // Default to guest/public view on auth failure
            userRole = 'none';
            userEmail = 'N/A';
            currentView = 'Public';
        }
        
        await fetchData(currentView); // Fetch initial data
        renderApp();
        
        if (loadingIndicator) {
            loadingIndicator.classList.add('hidden');
        }
    }

    // --- DATA FETCHING ---

    async function fetchData(view) {
        if (view === 'Admin' && (userRole === 'admin' || userRole === 'master_admin')) {
            const [ridesData, driversData] = await Promise.all([
                fetchScriptData('getAdminDashboard'),
                fetchScriptData('getAvailableDrivers')
            ]);
            
            rides = ridesData ? ridesData.data : [];
            availableDrivers = driversData ? driversData.drivers : [];

        } else if (view === 'Driver' && userRole === 'driver') {
            const ridesData = await fetchScriptData('GET_DRIVER_RIDES');
            rides = ridesData ? ridesData.rides : [];
        } 
        
        // Public view doesn't require data fetching
        renderContent(view);
    }

    // --- HANDLERS ---

    async function handleBookRide(event) {
        event.preventDefault();
        const form = event.target;
        const button = form.querySelector('button[type="submit"]');

        const rideData = {
            action: 'BOOK_RIDE',
            name: form.name.value,
            phone: form.phone.value,
            pickup: form.pickup.value,
            dropoff: form.dropoff.value,
            passengers: form.passengers.value,
            children: form.children.checked,
            pets: form.pets.checked,
            luggage: form.luggage.checked,
            assistanceWaiver: form.waiver.checked
        };
        
        button.disabled = true;
        button.textContent = 'Booking...';

        const response = await postScriptData(rideData);

        if (response) {
            form.reset();
            showModal("Success!", response.message, [{ text: "Close", className: "bg-green-500 text-white", handler: () => {} }]);
        }
        
        button.disabled = false;
        button.textContent = 'Book Ride';
    }
    
    // Admin: Assign Ride
    async function handleAssignRide(rideId, driverEmail) {
        if (userRole !== 'admin' && userRole !== 'master_admin') return;

        const response = await postScriptData({
            action: 'ASSIGN_RIDE',
            rideId: rideId,
            driverEmail: driverEmail 
        });

        if (response) {
            showModal("Success", response.message, [{ text: "OK", handler: () => fetchData('Admin') }]);
        }
    }

    // Driver: Update Ride Status
    async function handleUpdateRideStatus(rideId, newStatus) {
        if (userRole !== 'driver') return;
        
        showModal(
            "Confirm Status Change",
            `Set ride ${rideId.substring(0, 6)}... status to "${newStatus}"?`,
            [
                { text: "Cancel", handler: () => {} },
                { text: newStatus, className: "bg-red-500 text-white", handler: async () => {
                    const response = await postScriptData({
                        action: 'UPDATE_RIDE_STATUS',
                        rideId: rideId,
                        newStatus: newStatus
                    });
            
                    if (response) {
                        showModal("Success", response.message, [{ text: "Great!", className: "bg-green-500 text-white", handler: () => fetchData('Driver') }]);
                    }
                }}
            ]
        );
    }

    // --- RENDERING ---

    function renderNav() {
        const nav = document.getElementById('nav');
        nav.innerHTML = '';
        const views = [
            { id: 'Public', label: 'Public Booking', roles: ['none', 'driver', 'admin', 'master_admin'] },
            { id: 'Driver', label: 'Driver Dashboard', roles: ['driver'] },
            { id: 'Admin', label: 'Admin Dashboard', roles: ['admin', 'master_admin'] }
        ];

        views.filter(v => v.roles.includes(userRole)).forEach(view => {
            const button = document.createElement('button');
            button.textContent = view.label;
            button.className = `min-w-max px-4 py-2 font-semibold rounded-lg transition-colors text-sm ${currentView === view.id ? 'bg-red-500 text-white shadow-md' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}`;
            button.onclick = async () => {
                currentView = view.id;
                await fetchData(view.id);
                renderNav(); // Re-render to update active style
            };
            nav.appendChild(button);
        });

        // Update Auth Status display
        let roleIcon;
        let roleText;
        if (userRole === 'master_admin') {
            roleIcon = 'crown';
            roleText = 'Master Admin';
        } else if (userRole === 'admin') {
            roleIcon = 'shield-check';
            roleText = 'Admin';
        } else if (userRole === 'driver') {
            roleIcon = 'steering-wheel';
            roleText = 'Driver';
        } else {
            roleIcon = 'user';
            roleText = 'Guest';
        }

        const statusEl = document.getElementById('authStatus');
        statusEl.innerHTML = `
            <i data-lucide="${roleIcon}" class="icon-lg mr-2 text-red-500"></i>
            <span class="text-sm">Role: <span class="font-bold capitalize">${roleText}</span> (${userEmail})</span>
        `;
        lucide.createIcons();
    }

    function renderContent(view) {
        const content = document.getElementById('content');
        content.innerHTML = '';
        
        switch (view) {
            case 'Public':
                content.innerHTML = renderPublicBooking();
                const bookingForm = document.getElementById('bookingForm');
                if (bookingForm) {
                    bookingForm.onsubmit = handleBookRide;
                }
                break;
            case 'Driver':
                if (userRole === 'driver') {
                    content.innerHTML = renderDriverDashboard();
                    attachDriverHandlers();
                } else {
                    content.innerHTML = `<div class="bg-white p-6 rounded-xl shadow-lg text-center text-gray-500 mt-8">Access Denied: Log in as a Driver.</div>`;
                }
                break;
            case 'Admin':
                if (userRole === 'admin' || userRole === 'master_admin') {
                    content.innerHTML = renderAdminDashboard();
                    attachAdminHandlers();
                } else {
                    content.innerHTML = `<div class="bg-white p-6 rounded-xl shadow-lg text-center text-gray-500 mt-8">Access Denied: Log in as an Admin.</div>`;
                }
                break;
        }
        lucide.createIcons();
    }

    function renderPublicBooking() {
        return `
            <div class="bg-white shadow-xl rounded-xl p-6 sm:p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Request A Ride</h2>
                <form id="bookingForm" class="space-y-4">
                    <input type="text" name="name" placeholder="Your Full Name" required 
                           class="w-full p-3 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500">
                    <input type="tel" name="phone" placeholder="Phone Number" required 
                           class="w-full p-3 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500">
                    <input type="text" name="pickup" placeholder="Pickup Location (e.g., 123 Main St)" required 
                           class="w-full p-3 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500">
                    <input type="text" name="dropoff" placeholder="Dropoff Location" required 
                           class="w-full p-3 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500">
                    
                    <div class="grid grid-cols-2 gap-4">
                        <input type="number" name="passengers" placeholder="Number of Passengers" required min="1" value="1"
                            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500">
                    </div>
                    
                    <div class="space-y-2 p-3 border border-gray-200 rounded-lg bg-gray-50">
                        <label class="flex items-center space-x-2"><input type="checkbox" name="children" class="rounded text-red-500 focus:ring-red-500"> <span>Traveling with Children?</span></label>
                        <label class="flex items-center space-x-2"><input type="checkbox" name="pets" class="rounded text-red-500 focus:ring-red-500"> <span>Traveling with Pets?</span></label>
                        <label class="flex items-center space-x-2"><input type="checkbox" name="luggage" class="rounded text-red-500 focus:ring-red-500"> <span>Large Luggage?</span></label>
                    </div>

                    <div class="p-3 border border-red-300 rounded-lg bg-red-50">
                        <label class="flex items-center space-x-2 font-medium text-red-700">
                            <input type="checkbox" name="waiver" required class="rounded text-red-500 focus:ring-red-500"> 
                            <span>I agree to the Assistance Waiver (Required)</span>
                        </label>
                    </div>
                    
                    <button type="submit" 
                            class="w-full bg-red-500 text-white font-bold p-3 rounded-lg hover:bg-red-600 transition-colors shadow-md">
                        Book Ride
                    </button>
                </form>
            </div>
        `;
    }

    function renderDriverDashboard() {
        // Rides: [0] ID, [1] Time, [2] Name, [3] Phone, [4] Pickup, [5] Dropoff, [6] Driver, [7] Status
        const driverRides = rides.filter(r => 
            (r[7] === 'Assigned' || r[7] === 'Picked Up')
        );

        const cards = [
            { title: "Assigned Rides", count: driverRides.filter(r => r[7] === 'Assigned').length, icon: 'list-checks', color: 'text-blue-500' },
            { title: "Picked Up", count: driverRides.filter(r => r[7] === 'Picked Up').length, icon: 'users-2', color: 'text-yellow-500' },
            { title: "My Email", content: userEmail, icon: 'mail', color: 'text-red-500' }
        ];

        return `
            <h2 class="text-3xl font-bold text-gray-800 mb-6">Driver Dashboard</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                ${cards.map(card => `
                    <div class="bg-white p-6 rounded-xl shadow-lg flex flex-col justify-between dashboard-card">
                        <div>
                            <p class="text-sm font-medium text-gray-500">${card.title}</p>
                            <h3 class="text-3xl font-extrabold text-gray-900 mt-1 truncate">${card.count !== undefined ? card.count : card.content}</h3>
                        </div>
                        <div class="flex justify-end"><i data-lucide="${card.icon}" class="icon-lg ${card.color} w-8 h-8 mt-2"></i></div>
                    </div>
                `).join('')}
            </div>

            <div class="bg-white shadow-xl rounded-xl p-6">
                <h3 class="text-2xl font-bold mb-4 border-b pb-2">My Active Rides</h3>
                <div class="table-container">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 sticky top-0">
                            <tr>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">Rider & Details</th>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">Locations</th>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            ${driverRides.length > 0 ? driverRides.map(r => `
                                <tr class="hover:bg-gray-50">
                                    <td class="p-3 text-sm font-medium text-gray-900">${r[0].substring(0, 6)}</td>
                                    <td class="p-3 text-sm text-gray-500">
                                        <div class="font-semibold text-gray-700">${r[2]}</div>
                                        <div class="text-xs text-gray-500">${r[3]}</div>
                                        <div class="text-xs mt-1 text-red-600 font-medium">
                                            P: ${r[8]} / C: ${r[9] ? 'Yes' : 'No'} / Pet: ${r[10] ? 'Yes' : 'No'}
                                        </div>
                                    </td>
                                    <td class="p-3 text-sm text-gray-500">
                                        <div class="font-semibold text-gray-700">P/U: ${r[4]}</div>
                                        <div class="text-xs text-red-500">D/O: ${r[5]}</div>
                                    </td>
                                    <td class="p-3">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                            ${r[7] === 'Assigned' ? 'bg-blue-100 text-blue-800' : 'bg-yellow-100 text-yellow-800'}">
                                            ${r[7]}
                                        </span>
                                    </td>
                                    <td class="p-3 text-sm font-medium">
                                        <div class="flex flex-col space-y-1">
                                            ${r[7] === 'Assigned' ? 
                                                `<button data-ride-id="${r[0]}" data-status="Picked Up" class="status-btn text-white bg-yellow-500 hover:bg-yellow-600 p-2 rounded-lg text-xs">Picked Up</button>` : 
                                                `<button data-ride-id="${r[0]}" data-status="Completed" class="status-btn text-white bg-green-500 hover:bg-green-600 p-2 rounded-lg text-xs">Complete</button>`
                                            }
                                        </div>
                                    </td>
                                </tr>
                            `).join('') : `
                                <tr><td colspan="5" class="p-6 text-center text-gray-500">No active rides assigned to you.</td></tr>
                            `}
                        </tbody>
                    </table>
                </div>
            </div>
        `;
    }

    function attachDriverHandlers() {
        document.querySelectorAll('.status-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const rideId = btn.dataset.rideId;
                const newStatus = btn.dataset.status;
                handleUpdateRideStatus(rideId, newStatus);
            });
        });
    }

    function renderAdminDashboard() {
        // Rides: [0] ID, [7] Status, [2] Name, [3] Phone, [4] Pickup, [5] Dropoff, [1] Time
        const allPendingRides = rides.filter(r => r[7] === 'Pending');
        const activeDrivers = availableDrivers.filter(d => d.isAvailable);
        const assignedRidesCount = rides.filter(r => r[7] === 'Assigned').length;

        return `
            <h2 class="text-3xl font-bold text-gray-800 mb-6">Admin Dashboard</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-white p-6 rounded-xl shadow-lg dashboard-card">
                    <p class="text-sm font-medium text-gray-500">Pending Requests</p>
                    <h3 class="text-3xl font-extrabold text-red-500 mt-1">${allPendingRides.length}</h3>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-lg dashboard-card">
                    <p class="text-sm font-medium text-gray-500">Active Assignments</p>
                    <h3 class="text-3xl font-extrabold text-blue-500 mt-1">${assignedRidesCount}</h3>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-lg dashboard-card">
                    <p class="text-sm font-medium text-gray-500">Available Drivers</p>
                    <h3 class="text-3xl font-extrabold text-green-500 mt-1">${activeDrivers.length}</h3>
                </div>
            </div>

            <div class="bg-white shadow-xl rounded-xl p-6">
                <h3 class="text-2xl font-bold mb-4 border-b pb-2">Pending Rides for Assignment</h3>
                <div class="table-container">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 sticky top-0">
                            <tr>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">ID / Time</th>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">Rider Info</th>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">Locations</th>
                                <th class="p-3 text-left text-xs font-medium text-gray-500 uppercase">Assign To</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            ${allPendingRides.length > 0 ? allPendingRides.map(r => `
                                <tr class="hover:bg-gray-50">
                                    <td class="p-3 text-sm font-medium text-gray-900">
                                        ${r[0].substring(0, 6)}<br>
                                        <span class="text-xs text-gray-500">${new Date(r[1]).toLocaleTimeString()}</span>
                                    </td>
                                    <td class="p-3 text-sm text-gray-500">
                                        <div class="font-semibold text-gray-700">${r[2]} (${r[3]})</div>
                                        <div class="text-xs mt-1 text-red-600 font-medium">
                                            P: ${r[8]} / C: ${r[9] ? 'Y' : 'N'} / Pet: ${r[10] ? 'Y' : 'N'}
                                        </div>
                                    </td>
                                    <td class="p-3 text-sm text-gray-500">
                                        <div class="font-semibold text-gray-700">P/U: ${r[4]}</div>
                                        <div class="text-xs text-red-500">D/O: ${r[5]}</div>
                                    </td>
                                    <td class="p-3 text-sm">
                                        <select data-ride-id="${r[0]}" class="driver-select border border-gray-300 rounded-lg p-1 text-xs">
                                            <option value="">Select Driver</option>
                                            ${activeDrivers.map(d => `<option value="${d.email}">${d.name} (${d.email})</option>`).join('')}
                                        </select>
                                    </td>
                                </tr>
                            `).join('') : `
                                <tr><td colspan="4" class="p-6 text-center text-gray-500">No pending rides found.</td></tr>
                            `}
                        </tbody>
                    </table>
                </div>
            </div>
        `;
    }

    function attachAdminHandlers() {
        document.querySelectorAll('.driver-select').forEach(select => {
            select.addEventListener('change', (e) => {
                const rideId = e.target.dataset.rideId;
                const driverEmail = e.target.value;
                if (driverEmail) {
                    handleAssignRide(rideId, driverEmail);
                }
            });
        });
    }

    function renderApp() {
        renderNav();
        // The first call to fetchData already calls renderContent
    }

    // --- START APPLICATION ---
    window.onload = initApp;

</script>
</body>
</html>
